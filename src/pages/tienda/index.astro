---
import Layout from '../../layouts/Layout.astro';
import Categoria from '../../components/tienda/Categoria.astro';
import categorias from '../../data/categorias.json';
---

<Layout>
  <section class="px-6 py-16 max-w-5xl mx-auto text-center text-gold font-serif">
    <h1 class="text-3xl md:text-4xl mb-10">Tienda Espíritu Sónico</h1>
    <div class="grid md:grid-cols-2 gap-8">
      {categorias.map((cat) => (
        <Categoria {...cat} />
      ))}
    </div>
  </section>
</Layout>