---
import Layout from '../../layouts/Layout.astro';
import sahumerios from '../../data/productos/sahumerios.json';
import SahumerioCard from '../../components/tienda/SahumerioCard.astro';
---

<Layout>
  <section class="px-6 py-16 max-w-6xl mx-auto text-gold font-serif">
    <h1 class="text-3xl md:text-4xl mb-12 text-center">Sahumerios Artesanales</h1>

    <div class="grid gap-10 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {sahumerios.map((item, index) => (
        <SahumerioCard key={index} {...item} />
      ))}
    </div>
  </section>
</Layout>
