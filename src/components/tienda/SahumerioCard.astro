---
const { nombre, descripcion, descripcionExtendida, audio } = Astro.props;
let expanded = false;
---

<div class="bg-violetmid rounded-xl p-6 shadow-md text-gold">
  <h3 class="text-xl font-semibold mb-2">{nombre}</h3>
  <p>{descripcion}</p>
  <details class="mt-3">
    <summary class="underline cursor-pointer">Ver m√°s</summary>
    <p class="mt-2 text-sm">{descripcionExtendida}</p>
  </details>
  <div class="mt-4">
    <audio controls class="w-full">
      <source src={audio} type="audio/mpeg" />
      Tu navegador no soporta audio.
    </audio>
    <a href={audio} download class="text-sm underline mt-2 inline-block">Descargar viaje sonoro</a>
  </div>
</div>
